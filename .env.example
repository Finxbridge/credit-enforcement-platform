# ===========================================
# Environment Configuration Example
# ===========================================
# Copy this file to .env and update with your values
# For local development, leave Redis username/password empty
# For server deployment with Valkey, set proper credentials

# ===========================================
# Spring Profile
# ===========================================
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=development_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_SSL_MODE=prefer
POSTGRES_CONNECT_TIMEOUT=30

# ===========================================
# Redis/Valkey Configuration
# ===========================================
# For LOCAL development (no authentication):
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_USERNAME=
# REDIS_PASSWORD=
# REDIS_SSL_ENABLED=false

# For SERVER deployment (Valkey with authentication):
REDIS_HOST=your-valkey-host.com
REDIS_PORT=6379
REDIS_USERNAME=your-valkey-username
REDIS_PASSWORD=your-valkey-password
REDIS_SSL_ENABLED=true

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=MySecretKeyForJWTTokenGenerationMustBeAtLeast256BitsLongForHS256Algorithm
JWT_EXPIRATION=3600000
JWT_ISSUER=finxbridge
JWT_REFRESH_TOKEN_EXPIRY=604800000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# Flyway Configuration
# ===========================================
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
FLYWAY_OUT_OF_ORDER=false
FLYWAY_VALIDATE_ON_MIGRATE=false
FLYWAY_CLEAN_DISABLED=true

# ===========================================
# JPA Configuration
# ===========================================
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ===========================================
# Logging Configuration
# ===========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_FINX=DEBUG

# ===========================================
# Circuit Breaker Configuration
# ===========================================
CIRCUIT_BREAKER_HEALTH_INDICATOR=true
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION=5s

# ===========================================
# Service URLs (for inter-service communication)
# Use Docker service names in containerized environment
# ===========================================
ACCESS_MANAGEMENT_SERVICE_URL=http://access-management-service:8081
MASTER_DATA_SERVICE_URL=http://master-data-service:8082
CASE_SOURCING_SERVICE_URL=http://case-sourcing-service:8083
ALLOCATION_REALLOCATION_SERVICE_URL=http://allocation-reallocation-service:8084
COMMUNICATION_SERVICE_URL=http://communication-service:8085
STRATEGY_ENGINE_SERVICE_URL=http://strategy-engine-service:8086
TEMPLATE_MANAGEMENT_SERVICE_URL=http://template-management-service:8087
AGENCY_MANAGEMENT_SERVICE_URL=http://agency-management-service:8088
MY_WORKFLOW_SERVICE_URL=http://my-workflow-service:8089
COLLECTIONS_SERVICE_URL=http://collections-service:8090
NOTICE_MANAGEMENT_SERVICE_URL=http://notice-management-service:8091
CONFIGURATIONS_SERVICE_URL=http://configurations-service:8092
DMS_SERVICE_URL=http://dms-service:8093
